{
	"name": "apm/automation",
	"description": "APM Email Automation System - Automatyzacja komunikacji i planowania tras DHL",
	"type": "project",
	"license": "proprietary",
	"authors": [
		{
			"name": "APM Service",
			"email": "admin@apm-service.com"
		}
	],
	"require": {
		"php": ">=8.0",
		"phpoffice/phpspreadsheet": "^1.29",
		"phpmailer/phpmailer": "^6.9"
	},
	"require-dev": {
		"phpunit/phpunit": "^10.0"
	},
	"autoload": {
		"psr-4": {
			"App\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"scripts": {
		"test": "phpunit",
		"deploy": "bash deploy_to_dhosting.sh"
	},
	"config": {
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"sort-packages": true,
		"allow-plugins": {
			"php-http/discovery": true
		}
	},
	"minimum-stability": "stable",
	"prefer-stable": true
}